<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    android:layout_gravity="top"
    tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LONG" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LAT" />

    <TextView
        android:id="@+id/alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALT" />

    <TextView
        android:id="@+id/acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accuracy" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed" />

    <TextView
        android:id="@+id/sensorType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensortype" />

    <TextView
        android:id="@+id/updateOnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UpdatesOnOff" />

    <ToggleButton
        android:id="@+id/switchGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="Wifi/Cell"
        android:textOn="Wifi/cell" />

    <ToggleButton
        android:id="@+id/locationOnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="location off"
        android:textOn="location on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarmButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="addData"
            android:text="Larma" />

        <Button
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="btnSettings_onClick"
            android:text="Meny" />

        <Button
            android:id="@+id/sosButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="SOS" />


    </LinearLayout>


</LinearLayout>
